{
  "type": "module",
  "scripts": {
    "dev:api": "nodemon --ext js,json --watch backend --exec node backend/server.js",
    "dev:web": "browser-sync start --server frontend/public --files 'frontend/public/**/*' --port 5500 --no-open",
    "dev": "concurrently -n API,WEB -c green,cyan \"npm:dev:api\" \"npm:dev:web\"",
    "start": "node backend/server.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.10.3",
    "http-proxy": "^1.18.1"
  },
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10"
  }
}
